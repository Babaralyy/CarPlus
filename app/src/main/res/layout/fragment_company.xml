<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.CompanyFragment">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/arrow_back_ios"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ivMiniLogo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:src="@drawable/mini_logo_" />

        <ImageView
            android:id="@+id/ivPhone"
            android:layout_width="66dp"
            android:layout_height="63dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/ivView"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/blender_regular"
            android:gravity="center"
            android:text="@string/financing_company"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <View
            android:id="@+id/ivView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ivPhone"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="30dp"
            android:background="#99FFFFFF" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivFive"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/five_svg" />

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:padding="1dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/logo_svg" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivCard"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginEnd="10dp"
                    android:padding="1dp"
                    android:src="@drawable/card_svg" />

                <ImageView
                    android:id="@+id/ivBrowser"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginStart="10dp"
                    android:padding="1dp"
                    android:src="@drawable/browse_svg" />


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChoose"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_back"
                android:fontFamily="@font/blender_regular"
                android:text="@string/choose"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/blender_regular"
                android:text="@string/important"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/installation_will_be"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/blender_regular" />

                <TextView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="end"
                    android:fontFamily="@font/blender_black"
                    android:text="-1"
                    android:gravity="end"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/blender_regular"
                    android:text="@string/billing"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="end"
                    android:fontFamily="@font/blender_black"
                    android:text="-2"
                    android:gravity="end"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>